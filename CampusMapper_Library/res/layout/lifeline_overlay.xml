<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <net.movelab.cmlibrary.LifelineGLSurfaceView
        android:id="@+id/glsurfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/lastFixTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/dispads"
        android:text="@string/last_fix_time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/discolor" />

    <TextView
        android:id="@+id/lastFixTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/lastFixTimeLabel"
        android:padding="@dimen/dispads"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/discolor" />

    <ZoomControls
        android:id="@+id/zoomControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/firstFixTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/zoomControls"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/dispads"
        android:text="@string/first_fix_time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/discolor" />

    <TextView
        android:id="@+id/firstFixTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/zoomControls"
        android:layout_toRightOf="@id/firstFixTimeLabel"
        android:padding="@dimen/dispads"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/discolor" />
    
    

</RelativeLayout>